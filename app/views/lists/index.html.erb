<header class='d-flex flex-row-reverse'>
  <%= link_to 'New list', new_list_path, class: 'btn btn-primary' %>
  <%= link_to 'Movies', movies_path, class: 'btn btn-primary' %>
</header>

<div class="banner align-middle">
  <h3 class='text-white text-center'>Save any kind of movies</h3>
</div>
<div class="container p-5">

  <div class="list-header d-flex justify-content-between my-2 py-2">
    <h3>All my lists</h3>
    <%= link_to 'New list', new_list_path, class: 'btn btn-primary' %>
  </div>

  <div class="lists d-flex justify-content-around">
    <% @lists.each do |list| %>
    <div class="list-card mx-2 text-center">
      <%= link_to list.name, list_path(list), class: 'text-white' %>
    </div>
    <% end %>

  </div>

</div>